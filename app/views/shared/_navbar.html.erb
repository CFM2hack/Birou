
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
    <%= link_to "BIROU", root_path, class: "navbar-brand" %>
    <%#= image_tag "b.jpg" %>
    <%# end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
      <div class="row">
        <div class="col-12 col-lg-6" >
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
            <% if user_signed_in? %>
              <li class="nav-item active">
              <%= link_to "Offices", offices_path, class: "nav-link" %>
              </li>
              <li class="nav-item active">
              <%= link_to "Bookings", bookings_path, class: "nav-link" %>
              </li>
              <li class="nav-item dropdown">
                    <% if current_user.photo.attached? %>
                      <%= cl_image_tag current_user.photo.key, width: 40, height: 40, crop: :thumb, gravity: :face, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                    <% else %>
                      <%= image_tag "avatar_birou.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                    <% end %>
                  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                    <%= link_to " #{current_user.name.capitalize }'s Profile", edit_user_registration_path, class: "dropdown-item" %>
                    <%= link_to "Add Office", new_office_path, class: "dropdown-item" %>
                    <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
                  </div>
              </li>
            <% else %>
              <li class="nav-item active login">
                <%= link_to "Login", new_user_session_path, class: "nav-link" %>
                <%= link_to "SignUp", new_user_registration_path, class: "nav-link" %>
              </li>
            <% end %>
            </ul>
          </div>
        </div>
      </div>
</div>

