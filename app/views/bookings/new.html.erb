
<div class="container" style="margin-top: 60px";>
  <div class="row justify-content-center">
    <div class="col-12">
      <h2>Book <%= @office.name %></h2>
        <p></p>

        <%= simple_form_for [@office, @booking],:url => office_bookings_path, :method => :POST do |f| %>
          <%= f.input :start_date, as: :string, input_html: { class: "date-picker" } %>
          <%= f.input :end_date, as: :string, input_html: { class: "date-picker" } %>
          <%= f.input :category, :collection => %w[Visit Rent] %>
          <%= f.button :submit %>
        <% end %>
        <!-- <%= current_user %> -->
        <!-- <%= user_signed_in? %> -->
    </div>
  </div>
</div>



