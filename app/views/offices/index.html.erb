

<div class="container">
<% if params[:search] == "" %>
  <h2>Amazing offices </h2>
  <% else %>
  <h2>Amazing offices near <%= params[:search].capitalize  %></h2>
<% end %>

<div class="results">
  <% if @offices.nil? %>
    <p> No offices found </p>
  <% else %>
    <% @offices.each do |office| %>
       <%= link_to office_path(office) do %>
        <div class="card-product">
          <%= cl_image_tag office.photo.key %>
          <div class="card-product-infos">
            <h2> <%= office.name %> </h2>
            <p> <%= office.address %></p>
            <p> <em> <%= office.description %> </em> </p>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
</div>

