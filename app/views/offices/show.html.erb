<div class="flex-container">

  <div class="flex-child magenta">
    <div class="h1-container">
    <h1><%= @office.name %></h1>
    </div>
    <div class="photo-container">
      <%= cl_image_tag @office.photo.key, height: 500, width: 800, crop: :fill, :radius => 20 %>
    </div>
    <div class="location-container">
    <h3>Location</h3>
    <%= @office.address %>
    </div>
    <div class="description-container">
    <h4>Description</h4>
    <%= @office.description %>
    </div>
    <div class="amenities-container">
    <h3>Amenities</h3>
    </div>
    <ul class="list-inline amenities-inline">
      <div class="icon-container">
        <li class="list-inline-item amenity">
        <div class="preview-amenity__icon">
          <img data-test-id="amenity-img" alt="" class="amenity-img" src="https://www.wework.com/vanilla-assets/images/icons/amenities/high_speed_wi_fi.0e7650c5fd98bdb66f5f834515cfd460.svg">
        </div>
        <span data-test-id="amenity-name" class="preview-amenity__name ray-text--body-small">Wi-Fi</span>
        </li>
        <li class="list-inline-item amenity">
        <div class="preview-amenity__icon">
        <img data-test-id="amenity-img" alt="" class="amenity-img" src="https://www.wework.com/vanilla-assets/images/icons/amenities/meeting_rooms.2c97d54cb48f5126c08cc0a0df9137e9.svg">
        </div>
        <span data-test-id="amenity-name" class="preview-amenity__name ray-text--body-small">Meeting Room</span>
        </li>
        <li class="list-inline-item amenity">
          <div class="preview-amenity__icon">
            <img data-test-id="amenity-img" alt="" class="amenity-img" src="https://www.wework.com/vanilla-assets/images/icons/amenities/onsite_staff.f5ca0f8612b1e7f8a544053e9d73d35e.svg">
          </div>
          <span data-test-id="amenity-name" class="preview-amenity__name ray-text--body-small">Onsite staff</span>
        </li>
        <li class="list-inline-item amenity">
          <div class="preview-amenity__icon">
          <img data-test-id="amenity-img" alt="" class="amenity-img" src="https://www.wework.com/vanilla-assets/images/icons/amenities/cleaning_services.55c904c9d15e95c5bca848be7ea6f385.svg">
        </div>
        <span data-test-id="amenity-name" class="preview-amenity__name ray-text--body-small">Enhanced cleaning</span>
        </li>
      </div>
    </ul>
    <br>
    <div class="link">
      <%= link_to "Back to your search", offices_path %>
    </div>
  </div>
    <div class="flex-child green">
    <div class="container pt-5 booking-form" >
      <div class="row justify-content-center">
        <div class="col-12">
          <form action="#">
            <h2 class="text-center mb-5">Book this Space</h2>
            <div class="form-row">
              <div class="col-6 form-group">
                <label for="first-name">Your first name</label>
                <input type="text" class="form-control" id="first-name" placeholder="Bob" autocomplete="off" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;">
              </div>
              <div class="col-6 form-group">
                <label for="last-name">Your last name</label>
                <input type="text" class="form-control" id="last-name" placeholder="Sponge">
              </div>
            </div>
            <div class="form-group">
              <label for="email">Your email</label>
              <input type="email" class="form-control" id="email" placeholder="bob@gmail.com">
            </div>
            <div class="form-group">
              <label for="password">Your password</label>
              <input type="password" class="form-control" id="password" placeholder="•••••••" autocomplete="off" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;">
            </div>
            <div class="form-group">
              <label for="referrer">How do you know us?</label>
              <select id="referrer" class="form-control">
                <option value="">Facebook</option>
                <option value="">Google Search</option>
                <option value="">A friend</option>
              </select>
            </div>
            <input type="submit" value="Book Now" class="btn btn-lg w-100">
          </form>
        </div>
        <%= link_to "book", new_office_booking_path(@office), class: "btn btn-primary" %>
      </div>
    </div>
  </div>

</div>
